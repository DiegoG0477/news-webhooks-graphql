{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "rootDir": "src",
      "strict": true,
      "noEmit": false,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "outDir": "./dist"
    },
    "exclude": [ "node_modules" ]
  
  }
  